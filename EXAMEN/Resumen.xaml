<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EXAMEN.Resumen">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Resumen" TextColor="LightSkyBlue" FontSize="34" HorizontalTextAlignment="Center" />
            <Label x:Name="lblUusario" Text=" "  HorizontalTextAlignment="End"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>

                </Grid.ColumnDefinitions>

                <Label Text="NOMBRE" FontSize="20" Grid.Row="0" Grid.Column="0"/>
                <Entry x:Name="txtNombre" Placeholder="Nombre" IsReadOnly="True" Grid.Row="0" Grid.Column="1"/>
                <Label Text="TOTAL" FontSize="20" Grid.Row="1" Grid.Column="0"/>
                <Entry x:Name="txtTOTAL" Placeholder="Total"  IsReadOnly="True" Grid.Row="1" Grid.Column="1"/>
            </Grid>
            <Button x:Name="btnAcerca" Text="ACERCA DE " Clicked="btnAcerca_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>